<?xml version="1.0" encoding="utf-8"?>
<!-- Task List Item with Glassmorphism Design -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/taskCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_medium"
    android:elevation="@dimen/glass_elevation"
    app:cardBackgroundColor="@color/glass_background_light"
    app:cardCornerRadius="@dimen/glass_corner_radius"
    app:cardElevation="@dimen/glass_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_medium">

        <!-- Task Image (if available) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvTaskImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="@dimen/spacing_medium"
            android:visibility="gone"
            app:cardCornerRadius="@dimen/glass_corner_radius"
            app:cardElevation="0dp"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/ivTaskImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:src="@android:drawable/ic_menu_gallery" />

        </androidx.cardview.widget.CardView>

        <!-- Task Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Task Title -->
            <TextView
                android:id="@+id/tvTaskTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="운동 하러 가기" />

            <!-- Task Content -->
            <TextView
                android:id="@+id/tvTaskContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_tiny"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_medium"
                android:maxLines="3"
                android:ellipsize="end"
                android:visibility="gone"
                tools:visibility="visible"
                tools:text="헬스장에 가서 운동을 하고, 저녁 식사 전에 돌아오기" />

            <!-- Task Time -->
            <TextView
                android:id="@+id/tvTaskTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_tiny"
                android:textColor="@color/text_hint"
                android:textSize="@dimen/text_size_small"
                tools:text="오후 3:24" />

        </LinearLayout>

        <!-- More Options Button -->
        <ImageButton
            android:id="@+id/btnOptions"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/spacing_small"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_more"
            android:contentDescription="Options" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
