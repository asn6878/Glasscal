<?xml version="1.0" encoding="utf-8"?>
<!-- Login Fragment with Glassmorphism Design -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_main"
    tools:context=".ui.auth.LoginFragment">

    <!-- Content Container with Glass Effect -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_large"
        android:background="@drawable/bg_glass_card"
        app:cardCornerRadius="@dimen/glass_corner_radius"
        app:cardElevation="@dimen/glass_elevation"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_xlarge"
            android:background="@drawable/bg_glass_card">

            <!-- App Logo/Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Glasscal"
                android:textColor="@color/text_primary"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/spacing_small" />

            <!-- Subtitle -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="글래스모피즘 캘린더"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_medium"
                android:layout_marginBottom="@dimen/spacing_xlarge" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/glass_border"
                android:layout_marginBottom="@dimen/spacing_large" />

            <!-- Login Section Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그인"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_xlarge"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/spacing_medium" />

            <!-- Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OAuth 로그인을 통해 데이터를 백업하고\n여러 기기에서 동기화할 수 있습니다."
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_medium"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="@dimen/spacing_large" />

            <!-- Google Login Button -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btnGoogleLogin"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="@dimen/glass_corner_radius"
                app:cardElevation="@dimen/glass_elevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="@dimen/spacing_medium"
                    android:background="@drawable/bg_glass_button">

                    <!-- Google Icon Placeholder -->
                    <View
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@android:drawable/ic_dialog_info"
                        android:layout_marginEnd="@dimen/spacing_medium" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Google로 로그인"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Github Login Button -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btnGithubLogin"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="@dimen/spacing_large"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="@dimen/glass_corner_radius"
                app:cardElevation="@dimen/glass_elevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="@dimen/spacing_medium"
                    android:background="@drawable/bg_glass_button">

                    <!-- Github Icon Placeholder -->
                    <View
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@android:drawable/ic_dialog_info"
                        android:layout_marginEnd="@dimen/spacing_medium" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Github로 로그인"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Skip Login Button -->
            <Button
                android:id="@+id/btnSkipLogin"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="로그인 건너뛰기"
                android:textColor="@color/text_secondary" />

            <!-- Note -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/spacing_medium"
                android:text="※ 현재 디자인 프리뷰입니다.\n실제 OAuth 연동은 추후 구현 예정입니다."
                android:textColor="@color/text_hint"
                android:textSize="@dimen/text_size_small"
                android:gravity="center"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
