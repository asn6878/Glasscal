<?xml version="1.0" encoding="utf-8"?>
<!-- Enhanced Calendar Cell with Glassmorphism Effect -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer for depth -->
    <item
        android:left="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/glass_shadow" />
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Glass Background Layer -->
    <item
        android:bottom="1dp"
        android:right="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/glass_background_light" />
            <corners android:radius="12dp" />
            <stroke
                android:width="1dp"
                android:color="@color/glass_border" />
        </shape>
    </item>

    <!-- Bright border highlight -->
    <item
        android:bottom="1dp"
        android:right="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <stroke
                android:width="1dp"
                android:color="@color/glass_border_bright" />
        </shape>
    </item>

    <!-- Subtle shine effect -->
    <item
        android:bottom="1dp"
        android:right="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="@color/glass_highlight"
                android:centerColor="#00FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
            <corners android:radius="12dp" />
        </shape>
    </item>

</layer-list>
