<?xml version="1.0" encoding="utf-8"?>
<!-- Pink Glass Button -->
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/glass_highlight">

    <item>
        <layer-list>
            <!-- Shadow layer -->
            <item
                android:left="1dp"
                android:top="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/glass_shadow" />
                    <corners android:radius="12dp" />
                </shape>
            </item>

            <!-- Main glass background with gradient -->
            <item
                android:bottom="1dp"
                android:right="1dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="135"
                        android:startColor="@color/glass_pink"
                        android:endColor="@color/secondary_glass"
                        android:type="linear" />
                    <corners android:radius="12dp" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/glass_border" />
                    <padding
                        android:left="16dp"
                        android:top="12dp"
                        android:right="16dp"
                        android:bottom="12dp" />
                </shape>
            </item>

            <!-- Top highlight for glass shine effect -->
            <item
                android:bottom="1dp"
                android:right="1dp"
                android:top="0dp"
                android:left="0dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="270"
                        android:startColor="@color/glass_border_bright"
                        android:centerColor="#00FFFFFF"
                        android:endColor="#00FFFFFF"
                        android:type="linear" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</ripple>
