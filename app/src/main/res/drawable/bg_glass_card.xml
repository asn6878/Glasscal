<?xml version="1.0" encoding="utf-8"?>
<!-- Enhanced Glassmorphism Card Background -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow layer for depth -->
    <item
        android:left="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/glass_shadow" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Main glass background -->
    <item
        android:bottom="2dp"
        android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/glass_background" />
            <corners android:radius="16dp" />
            <stroke
                android:width="1dp"
                android:color="@color/glass_border" />
        </shape>
    </item>

    <!-- Top and left bright border for glass reflection -->
    <item
        android:bottom="2dp"
        android:right="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <stroke
                android:width="2dp"
                android:color="@color/glass_border_bright" />
        </shape>
    </item>

    <!-- Gradient overlay for shine effect -->
    <item
        android:bottom="2dp"
        android:right="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="@color/glass_highlight"
                android:centerColor="#00FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
            <corners android:radius="16dp" />
        </shape>
    </item>

</layer-list>
