<?xml version="1.0" encoding="utf-8"?>
<!-- Glassmorphism Button Background -->
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/glass_border">

    <item>
        <shape android:shape="rectangle">
            <!-- 반투명 배경 -->
            <solid android:color="@color/primary_glass" />

            <!-- 둥근 모서리 -->
            <corners android:radius="12dp" />

            <!-- 테두리 -->
            <stroke
                android:width="1dp"
                android:color="@color/glass_border" />

            <!-- 패딩 -->
            <padding
                android:left="16dp"
                android:top="12dp"
                android:right="16dp"
                android:bottom="12dp" />
        </shape>
    </item>

</ripple>
