<?xml version="1.0" encoding="utf-8"?>
<!-- Glassmorphism Header Background for Day of Week -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow layer (Blue Shadow #004585 with 20% opacity, 15dp blur simulation) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/glass_shadow" />
            <corners android:radius="24dp" />
        </shape>
    </item>

    <!-- Main glass background with gradient (White 50% -> 20%) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="#80FFFFFF"
                android:endColor="#33FFFFFF"
                android:type="linear" />
            <corners android:radius="24dp" />
            <stroke
                android:width="1.5dp"
                android:color="@color/glass_border_bright" />
        </shape>
    </item>

</layer-list>
