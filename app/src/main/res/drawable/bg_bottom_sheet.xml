<?xml version="1.0" encoding="utf-8"?>
<!-- Enhanced Bottom Sheet Background with Glassmorphism -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Main glass background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/glass_background_light" />
            <corners
                android:topLeftRadius="24dp"
                android:topRightRadius="24dp" />
            <stroke
                android:width="1dp"
                android:color="@color/glass_border" />
        </shape>
    </item>

    <!-- Top bright border for glass reflection -->
    <item>
        <shape android:shape="rectangle">
            <corners
                android:topLeftRadius="24dp"
                android:topRightRadius="24dp" />
            <stroke
                android:width="3dp"
                android:color="@color/glass_border_bright" />
        </shape>
    </item>

    <!-- Top gradient shine effect -->
    <item
        android:bottom="200dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="@color/glass_highlight"
                android:endColor="#00FFFFFF"
                android:type="linear" />
            <corners
                android:topLeftRadius="24dp"
                android:topRightRadius="24dp" />
        </shape>
    </item>

</layer-list>
